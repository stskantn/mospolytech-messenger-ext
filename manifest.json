{
  "manifest_version": 3,
  "name": "Mospolytech Messenger",
  "version": "1.0.18",
  "description": "Рассылка сообщений студентам черел ЛК Московского Политеха",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Mospolytech Messenger",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["tabs"],
  "host_permissions": ["https://e.mospolytech.ru/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://e.mospolytech.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}